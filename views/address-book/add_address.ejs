<% layout('/layout/boilerplate') %>

<!--ADD INFORMATION TO THE ADDRESS BOOK -->
<div class="card">
  <header class="card-header">
    <p class="card-header-title">Add Contact Information</p>
  </header>
  <div class="card-content">
    <div class="content">
      <!--FORM START-->
      <form action="/address-book" method="post">
        <!-- First Name -->
        <div class="field">
          <label class="label" for="fname">First Name</label>
          <div class="control">
            <input
              class="input"
              type="text"
              id="fname"
              name="addressdb[firstName]"
              placeholder="Enter Your First Name"
            />
          </div>
        </div>

        <!-- Last Name -->
        <div class="field">
          <label class="label" for="lname">Last Name</label>
          <div class="control">
            <input
              class="input"
              type="text"
              id="lname"
              name="addressdb[lastName]"
              placeholder="Enter Your First Name"
            />
          </div>
        </div>

        <!-- Mailing Address -->
        <div class="field">
          <label class="label" for="address">Address</label>
          <div class="control">
            <input
              class="input"
              type="text"
              id="address"
              name="addressdb[address]"
              placeholder="Enter your mailing address"
              required
            />
          </div>
        </div>

        <!-- Email Address -->
        <div class="field">
          <label class="label" for="email">Email</label>
          <div class="control">
            <input
              class="input"
              type="email"
              id="email"
              name="addressdb[email]"
              placeholder="Email input"
              required
            />
          </div>
        </div>

        <!-- Phone Number -->
        <div class="field">
          <label class="label" for="contact">Phone Number</label>
          <div class="control">
            <input
              class="input"
              type="tel"
              id="contact"
              name="addressdb[phoneNumber]"
              placeholder="Enter your contact number"
              required
            />
          </div>
        </div>

        <!-- Birthday Number -->
        <div class="field">
          <label class="label" for="bday">Birthday</label>
          <div class="control">
            <input
              class="input"
              type="date"
              id="bday"
              name="addressdb[birthday]"
              placeholder="Enter your birthday"
              required
            />
          </div>
        </div>

        <!-- Form Buttons -->
        <div class="field is-grouped">
          <div class="control">
            <button class="button is-link">Submit</button>
          </div>
          <div class="control">
            <button class="button is-link is-light">
              <a href="/address-book/index"> Cancel</a>
            </button>
          </div>
        </div>
      </form>
      <!--FORM END-->
    </div>
  </div>
</div>
